---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const title = "Legal Notice – Madrid Landing Kit";
const description =
  "Legal information about the ownership, purpose, and conditions of use of madridlandingkit.com in accordance with Spanish law.";
  const lastUpdated = new Date().toLocaleDateString("en-GB", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout title={title} description={description}>
  <section class="py-24">
    <Wrapper variant="standard">
      
      <div class="max-w-3xl mx-auto px-6 space-y-6">

        <h1 class="text-3xl font-display font-medium">
          Legal Notice
        </h1>

<p class="text-sm text-base-600">
  <strong>Last updated:</strong> {lastUpdated}
</p>

        <p>
          In compliance with applicable information society and e-commerce
          regulations, the following information is provided.
        </p>

        <h2 class="text-xl font-medium mt-8">
          Website Owner
        </h2>

      <p>
  Website name: <strong>Madrid Landing Kit</strong><br />
  Website URL: https://madridlandingkit.com<br />
  <strong>Owner:</strong> Individual operator based in Madrid, Spain<br />
  <strong>Location:</strong> Madrid, Spain<br />
  <strong>Email contact:</strong> info@madridlandingkit.com
</p>

        <p>
          A legal entity may be incorporated in the future. This Legal Notice
          will be updated accordingly.
        </p>

       <h2 class="text-xl font-medium mt-8">
  Purpose of the Website
</h2>

<ul>
  <li>
    Madrid Landing Kit is an informational and content-based website aimed at providing guidance, resources, and practical information related to moving, studying, or settling in Madrid, Spain.
