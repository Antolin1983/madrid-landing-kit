---
import Text from "@/components/fundations/elements/Text.astro";
import Layout from "@/layouts/BaseLayout.astro";
---

<Layout title="Thank you - Madrid Landing Kit">
  <section class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
    <Text tag="h1" variant="displaySM" class="mb-4">
      ¡Checklist on its way! ✈️
    </Text>
    
    <Text tag="p" variant="textMD" class="text-gray-600 mb-8 max-w-md">
      Thanks for joining. Please check your <strong>Promotions</strong> or <strong>Spam</strong> folder if you don't see the email within a minute.
    </Text>

    <a 
      href="/" 
  class="w-full inline-block rounded-lg bg-green-500 py-3 text-center text-white font-semibold hover:bg-green-600 transition-colors"
    >
      Back to Home
    </a>
  </section>
</Layout>